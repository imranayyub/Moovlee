<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/bdarkbeach"
    tools:context="com.example.im.googlesign.MainActivity">

    <TextView
        android:id="@+id/login_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20dp"
        android:textColor="#e7dfe0"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp" />
    <TextView
        android:id="@+id/UserName"
        android:textColor="#e7dfe0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80pt"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/UserEmail"
        android:textColor="#e7dfe0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="50pt"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/gmail_signinbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="SignInWithGoogle+"
        android:drawableLeft="@drawable/googleicon"/>

    <Button
        android:id="@+id/gmail_sigoutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="Log Out"
        android:drawableLeft="@drawable/googleicon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/bnfb"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Continue with Fb"
        android:background="@color/com_facebook_blue"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="400dp"
        android:drawableLeft="@drawable/fbbtn3"
        />
    <Button
        android:id="@+id/bnfbl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Log Out"
        android:background="@color/com_facebook_blue"
        android:layout_marginTop="400dp"
        android:visibility="invisible"
        android:drawableLeft="@drawable/fbbtn3"
        />

    </RelativeLayout>
